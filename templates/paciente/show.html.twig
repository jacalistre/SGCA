{% extends 'base.html.twig' %}

{% block title %}Paciente{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-8">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Paciente</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12" style="text-align: center">
                                    <h2>Datos Generales</h2>
                                </div>

                            </div>
                            <div class="row badge badge-light"
                                 style="font-size: 12px;text-align: left;line-height: 2em">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3"><b>Nombre</b><br> {{ paciente.nombre }}</div>

                                        <div class="col-md-3"><b>Apellidos</b><br>{{ paciente.apellidos }}</div>

                                        <div class="col-md-3"><b>CI/Pasaporte</b><br>{% if paciente.pasaporte==null %}

                                                {% if(paciente.carnet!=null) %}

                                                    {{ paciente.carnet }}
                                                {% endif %}
                                            {% else %}
                                                {{ paciente.pasaporte }}
                                            {% endif %}
                                        </div>
                                        <div class="col-md-3"><b>Edad</b><br> {{ paciente.edad }}</div>

                                    </div>
                                    <br>
                                    <div class="row">

                                        <div class="col-md-3"><b>Sexo</b><br>{{ paciente.getNonimalSex }}</div>
                                        <div class="col-md-3"><b>Direccion CI</b><br>{{ paciente.direccionci }}</div>
                                        <div class="col-md-3"><b>Direccion Residencia</b><br>{{ paciente.direccionres }}
                                        </div>
                                        <div class="col-md-3"><b>Color de la piel</b><br>{{ paciente.getNominalColor }}
                                        </div>


                                    </div>
                                    <br>
                                    <div class="row">

                                        <div class="col-md-3"><b>Provincia</b><br>{{ paciente.provincia }}</div>
                                        <div class="col-md-3"><b>Municipio</b><br>{{ paciente.municipio }}</div>
                                        <div class="col-md-3"><b>Area de Salud</b><br>{{ paciente.area }}</div>
                                        <div class="col-md-3"><b>Consultorio</b><br>{{ paciente.consultorio }}</div>


                                    </div>
                                    <br>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12" style="text-align: center">
                                    <h2>Clasificaciones</h2>
                                </div>

                            </div>
                            <div class="row badge badge-light"
                                 style="font-size: 12px;text-align: left;line-height: 2em">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3"><b>Epidemiologia</b><br> {{ paciente.epidemiologia }}
                                        </div>

                                        <div class="col-md-3"><b>Sintomatologia</b><br>{{ paciente.sintomatologia }}
                                        </div>

                                        <div class="col-md-3"><b>Riesgo</b><br> {{ paciente.riesgo }} </div>
                                        <div class="col-md-3"><b>Transportable</b><br> {{ paciente.transportable }}
                                        </div>

                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-3"><b>Vacuna</b><br> {{ paciente.vacuna }}</div>

                                        <div class="col-md-3"><b>Cant.Dosis</b><br>{{ paciente.dosis }}</div>

                                        <div class="col-md-4"><b>Requiere transporte
                                                sanitario</b><br>{% if paciente.transportesanitario %}SI{% else %}NO{% endif %}
                                        </div>

                                    </div>
                                    <br>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12" style="text-align: center">
                                    <h2>Antecedentes Personales</h2>
                                </div>

                            </div>
                            <div class="row badge badge-light"
                                 style="font-size: 12px;text-align: left;line-height: 2em">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-1">
                                            <b>HTA</b><br> {% if  paciente.hta %}SI{% else %}NO{% endif %}
                                        </div>
                                        <div class="col-md-1">
                                            <b>DM</b><br> {% if  paciente.dm %}SI{% else %}NO{% endif %}
                                        </div>
                                        <div class="col-md-1">
                                            <b>EPOC</b><br> {% if  paciente.epoc %}SI{% else %}NO{% endif %}
                                        </div>
                                        <div class="col-md-1">
                                            <b>AB</b><br> {% if  paciente.ab %}SI{% else %}NO{% endif %}
                                        </div>

                                        <div class="col-md-1">
                                            <b>CI</b><br> {% if  paciente.ci %}SI{% else %}NO{% endif %}
                                        </div>
                                        <div class="col-md-1">
                                            <b>VIH</b><br> {% if  paciente.vih %}SI{% else %}NO{% endif %}
                                        </div>
                                        <div class="col-md-1">
                                            <b>Cancer</b><br> {% if  paciente.cancer %}SI{% else %}NO{% endif %} </div>
                                        <div class="col-md-1">
                                            <b>Obesidad</b><br> {% if  paciente.obeso %}SI{% else %}NO{% endif %} </div>
                                        <div class="col-md-4"><b>Trastornos
                                                Siquiatricos</b><br> {% if  paciente.trastornos %}SI{% else %}NO{% endif %}
                                        </div>

                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <b>Inmunodeprimido</b><br> {% if  paciente.inmunodeprimido %}SI{% else %}NO{% endif %}
                                        </div>

                                        <div class="col-md-4"><b>Otros
                                                APP</b><br> {% if  paciente.otros %}SI{% else %}NO{% endif %} </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-12" style="text-align: center">
                                            <h2>Signos Vitales</h2>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-3"><b>Frecuencia Respiratoria</b><br> {{ paciente.fr }}</div>
                                        <div class="col-md-3"><b>Frecuencia Cardiaca</b><br> {{ paciente.fc }}</div>
                                        <div class="col-md-3"><b>Tension Arterial</b><br> {{ paciente.ta }}</div>
                                        <div class="col-md-3"><b>Saturacion de Oxigeno</b><br> {{ paciente.saturacion }}
                                        </div>

                                    </div>
                                    <br>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12" style="text-align: center">
                                    <h2>Datos Adicionales</h2>
                                </div>

                            </div>
                            <div class="row badge badge-light"
                                 style="font-size: 12px;text-align: left;line-height: 2em">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-12"><br> {{ paciente.observaciones }}</div>

                                    </div>
                                    <br>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>

            </div>

        </div>
        <div style="position: fixed;right: 0;" class="col-md-3">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Acciones</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <div class="row">
                        <div class="col-md-12" style="display: grid">

                                {% if is_granted('ROLE_COORDINADOR_PROVINCIAL') and (paciente.isRemision() or paciente.isPendienteHospital()) %}
                                    <a  href="{{ path('rechazar_solicitud',{'id':paciente.id}) }}"
                                        title="Rechazar peticion"><span
                                                class="fa fa-thumbs-down" style="color: darkred"></span>Rechazar  Peticion</a> {# Rechazar  Peticion#}
                                {% endif %}
                                {% if is_granted("ROLE_SUPER_ADMIN") %}
                                    <a href="{{ path('super_delete',{'id':paciente.id}) }}" onclick="return confirm('Estas seguro que deseas eliminar este paciente');"
                                       title="Eliminar"><span
                                                class="fa fa-trash"></span></a> {#Eliminar pacientes, ingresos y pruebas#}
                                {% endif %}
                                {% if is_granted('ROLE_AREA') or is_granted("ROLE_CENTRO") or is_granted("ROLE_HOSPITAL") %}
                                    {% if paciente.getIngresoActual==null %}
                                        <a href="{{ path('ingreso_domicilio',{'id':paciente.id}) }}" onclick="return confirm('Estas seguro que deseas enviar el paciente a ingreso domiciliario');"
                                           title="Ingreso Domicilio"><span
                                                    class="fa fa-home"></span>Ingreso Domicilio</a> {#Ingreso Domicilio#}
                                    {% endif %}
                                {% endif %}
                                {% if is_granted('ROLE_LABORATORIO') %}
                                    <a onclick="PrepararPrueba(this)" href="#" data-paciente="{{ paciente.id }}"
                                       title="Registrar resultado de prueba"><span
                                                class="fa fa-eyedropper"></span>Registrar Prueba</a> {# Registrar Prueba#}
                                {% endif %}
                                {% if is_granted('ROLE_CENTRO')  or is_granted('ROLE_HOSPITAL') or is_granted('ROLE_ADMIN') %}
                                    {% if paciente.isPendienteIngreso() %}
                                        <a href="{{ path('confirmar_ingreso',{'id':paciente.getIngresoActual.id}) }}"
                                           title="Confirmar Ingreso"><span
                                                    class="fa fa-check"></span>Confirmar Ingreso</a> {#Confirmar Ingreso#}
                                        {#   {% if paciente.acompanante==null %}
                                                <a onclick="PrepararAcompannante(this)" href="#"
                                                   data-paciente="{{ paciente.id }}" title="Asignar acompañante"><span
                                                            class="fa fa-user-md"></span></a> {# Asignar acompañante#}
                                        {#  {% endif %}
                                        #}
                                    {% endif %}


                                    {% if paciente.isIngresado() %}
                                        {% if paciente.acompanante==null %}
                                            <a onclick="PrepararAcompannante(this)" href="#"
                                               data-paciente="{{ paciente.id }}" title="Asignar acompañante"><span
                                                        class="fa fa-user-md"></span>Asignar acompañante</a> {# Asignar acompañante#}
                                        {% endif %}
                                        {% if paciente.getIngresoActual.cama is not null %}
                                        <a onclick="PrepararPrueba(this)" href="#" data-paciente="{{ paciente.id }}"
                                           title="Registrar resultado de prueba"><span
                                                    class="fa fa-eyedropper"></span>Registrar Prueba</a> {# Registrar Prueba#}
                                        <a href="{{ path('paciente_remision',{'id':paciente.id}) }}" onclick="return confirm('¿Estas seguro que deseas solicitar una remision del paciente?')"
                                           title="Solicitar remision" style="color: red;"><span
                                                    class="fa fa-medkit"></span>Solicitar remision</a> {#Solicitar remision#}
                                        <a href="{{ path('alta',{'id':paciente.getIngresoActual.id}) }}" onclick="return confirm('¿Estas seguro que desea darle alta al paciente?, si el paciente no posee prueba negativa se procedera a alta clinica')"
                                           title="Alta"><span class="fa fa-taxi"></span>Alta</a> {#Alta#}
                                        <a href="{{ path('paciente_fallecio',{'id':paciente.getIngresoActual.id}) }}" onclick="return  confirm('Estas seguro que deseas reportar el paciente como fallecido');"
                                           title="Alta por fallecimiento" style="color: black;"><span
                                                    class="fa fa-heart"></span>Alta fallecimiento</a> {#Alta fallecimiento#}
                                       {% endif %}
                                        <a href="#" onclick="PrepararCambio(this)"
                                           title="Reubicar dentro del centro"
                                           data-ingreso="{{ paciente.getIngresoActual.id }}"
                                           style="color: green;"><span
                                                    class="fa fa-building"></span>Reubicar dentro del centro</a> {#Reubicar dentro del centro#}
                                    {% endif %}
                                    {% if(paciente.isAlta() and   paciente.fueTransportado()!=null) or (paciente.isAltaClinica() and paciente.fueTransportado()!=null and paciente.fueTransportado.cama!=null) %}
                                        <a href="{{ path('salida_centro',{'id':paciente.fueTransportado().id}) }}"
                                           title="Confirmar salida del centro" style="color: green;"><span
                                                    class="fa fa-check-square-o"></span>Confirmar salida del centro</a> {#Confirmar salida del centro#}
                                    {% endif %}
                                {% endif %}
                                {% if is_granted('ROLE_AREA') and( (paciente.getIngresoActual()==null and not paciente.isFallecido() ) or paciente.isPendienteUbic() or paciente.isDomicilio) %}


                                    <a href="{{ path('paciente_hospital', {'id': paciente.id}) }}"
                                       title="Solicitar ingreso a un hospital" onclick="return confirm('Estas seguro que deseas solicitar ingreso a un hospital del paciente')"
                                       style="color: red;"><span
                                                class="fa fa-hospital-o" ></span>Solicitar ingreso a un hospital</a> {#Solicitar ingreso a un hospital#}
                                    {% if paciente.isDomicilio %}
                                        <a href="{{ path('alta',{'id':paciente.getIngresoActual.id}) }}" onclick="return confirm('¿Estas seguro que desea darle alta al paciente?, si el paciente no posee prueba negativa se procedera a alta clinica')"
                                           title="Alta"><span class="fa fa-taxi"></span>Alta</a> {#Alta#}
                                        <a onclick="PrepararPrueba(this)" href="#" data-paciente="{{ paciente.id }}"
                                           title="Registrar resultado de prueba"><span
                                                    class="fa fa-eyedropper"></span>Registrar Prueba</a> {# Registrar Prueba#}
                                        <a href="{{ path('paciente_remision',{'id':paciente.id}) }}" onclick="return confirm('¿Estas seguro que deseas solicitar una remision del paciente?')"
                                           title="Solicitar remision" style="color: red;"><span
                                                    class="fa fa-medkit"></span>Solicitar remision</a> {#Solicitar remision#}
                                    {% endif %}

                                {% endif %}

                                {% if is_granted('ROLE_CENTRO') or is_granted('ROLE_ADMIN') or  is_granted('ROLE_COORDINADOR_MUNICIPAL') %}
                                    {% if paciente.isIngresado() or paciente.isPendienteUbic() %}
                                        <a href="{{ path('paciente_hospital',{'id':paciente.id}) }}"
                                           title="Solicitar ingreso a un hospital" onclick="return confirm('Estas seguro que deseas solicitar ingreso a un hospital del paciente')"

                                           style="color: red;"><span
                                                    class="fa fa-hospital-o"></span>Solicitar ingreso a un hospital</a> {#Solicitar ingreso a un hospital#}


                                    {% endif %}
                                {% endif %}
                                {% if ((paciente.isAlta and  paciente.fueTransportado()==null) or paciente.ingresos==null or paciente.ingresos.count==0 or paciente.isAltaClinica) and is_granted('ROLE_AREA') %}
                                    <a href="#" onclick="PrepararIngreso(this)"
                                       data-paciente="{{ paciente.id }}" title="Solicitar Ingreso"><span
                                                class="fa fa-ambulance"></span>Solicitar Ingreso</a> {#Solicitar Ingreso#}
                                {% endif %}


                                {% if is_granted('ROLE_COORDINADOR_MUNICIPAL') or is_granted('ROLE_COORDINADOR_PROVINCIAL') or is_granted('ROLE_ADMIN') %}
                                    {% if paciente.isPendienteIngreso() %}
                                        <a href="{{ path('retirar_ingreso',{'id':paciente.getIngresoActual.id}) }}"
                                           title="Retirar Ubicacion" style="color: green;"><span
                                                    class="fa fa-user-times"></span>Eliminar ingreso</a> {#Eliminar ingreso#}
                                    {% endif %}

                                    {% if paciente.isPendienteUbic() or paciente.isRemision() or paciente.isPendienteHospital() %}
                                        <a href="{{ path('ingreso_edit',{'id':paciente.getIngresoActual.id}) }}"
                                           title="Ubicar" style="color: green;"><span
                                                    class="fa fa-street-view"></span>Asignar una ubicacion</a> {#Asignar una ubicacion#}
                                    {% endif %}

                                {% endif %}

                                <a title="Editar Paciente"
                                   href="{{ path('paciente_edit', {'id': paciente.id}) }}"><span
                                            class="fa fa-edit"></span> Editar Paciente</a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    {{ include('paciente/_delete_form.html.twig',{delete:'Eliminar'}) }}
                                {% endif %}

                        </div>

                    </div>
                </div>

            </div>

        </div>
    </div>



    <div class="row">
        <div class="col-md-8">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Ingresos</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {% for ingreso in paciente.ingresos %}
                        <div class="row badge badge-light">
                            <div class="col-md-12">
                                <div class="row">

                                    <div class="col-md-4">
                                        <b>Solicitud de ingreso enviada por:</b>
                                        <p>{{ ingreso.usuario.getDataforMessage }}</p>
                                    </div>
                                    <div class="col-md-4">
                                        <b>Fecha de confirmacion:</b>
                                        <p>{{ ingreso.fechaconfirmacion ? ingreso.fechaconfirmacion|date('Y-m-d') : '' }}</p>
                                    </div>
                                    <div class="col-md-4">
                                        <b>Fecha de ingreso:</b>
                                        <p>{{ ingreso.fechaentrada ? ingreso.fechaentrada|date('Y-m-d') : '-' }}</p>
                                    </div>
                                </div>
                                <div class="row">

                                    <div class="col-md-4">
                                        <b>Centro</b>
                                        <p>{{ ingreso.centro }}</p>
                                    </div>
                                    <div class="col-md-4">
                                        <b>Sala:</b>
                                        <p>{{ ingreso.sala }}</p>
                                    </div>
                                    <div class="col-md-4">
                                        <b>Cama:</b>
                                        <p>{{ ingreso.cama }}</p>
                                    </div>
                                </div>
                                <div class="row">

                                    <div class="col-md-4">
                                        <b>Fecha de Notificacion de Alta</b>
                                        <p>{{ ingreso.fechaalta ? ingreso.fechaalta|date('Y-m-d H:i:s') : '-' }}</p>
                                    </div>
                                    <div class="col-md-4">
                                        <b>Fecha de Recogida en centro</b>
                                        <p>{{ ingreso.fechatransportado ? ingreso.fechatransportado|date('Y-m-d H:i:s') : '-' }}</p>
                                    </div>
                                    <div class="col-md-4">
                                        <b>Estado:</b>
                                        <p style="font-size: 14px;font-weight: bolder;">{{ ingreso.estado }}</p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Pruebas</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    {% for prueba in paciente.pruebas %}
                    <div class="row {{ prueba.resultado ?(prueba.resultado=='Negativo'?'badge badge-success':'badge badge-danger' ):'badge badge-warning' }}" style="font-size: 11px;">
                        <div class="row">
                            <div class="col-md-3">
                                <b>Fecha muestra:</b>

                                    <p>{{ prueba.fecha ? prueba.fecha|date('Y-m-d') : '-' }}</p>

                            </div>
{% if prueba.tipo %}
    <div class="col-md-3">
        <b>Tipo de Prueba:</b>

        <p>{{ prueba.tipo ? prueba.tipo : '-' }}</p>

    </div>
    <div class="col-md-3">
        <b>Resultado</b>

        <p>{{ prueba.resultado ? prueba.resultado : '-' }}</p>

    </div>
    <div class="col-md-3">
        <b>Fecha de Notificacion:</b>

        <p>{{ prueba.fechanotificacion ? prueba.fechanotificacion|date('Y-m-d H:i:s') : '-' }}</p>

    </div>
                            {% else %}
                                <div class="col-md-6 offset-3">
                                    <b>Estado actual</b>

                                    <p>Planificada para realizacion</p>

                                </div>

                                {% endif %}
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <!-- Small modal -->
    <!-- Small modal -->

    <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">

                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel2">Fecha de Confirmaci&oacute;n</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">×</span>
                    </button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="data1">
                    <input id="confirm" class="date-picker form-control" placeholder="dd/mm/yyyy" type="text"
                           required="required" type="text" onfocus="this.type='date'" onmouseover="this.type='date'"
                           onclick="this.type='date'" onblur="this.type='text'">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <a href="#" data-process="false" onclick="SendIngreso(this)" class="btn btn-primary"><span
                                class="fa fa-send"></span>Solicitar</a>
                </div>

            </div>
        </div>
    </div>
    <!-- /modals -->



    <!-- Small modal -->

    <div class="modal fade prueba-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">

                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel2">Registrar Prueba</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">×</span>
                    </button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="data-id">
                    <b>Fecha toma de muestra</b>
                    <input id="prueba" class="date-picker form-control" placeholder="dd/mm/yyyy" type="text"
                           required="required" type="text" onfocus="this.type='date'" onmouseover="this.type='date'"
                           onclick="this.type='date'" onblur="this.type='text'">
                    <br>
                    <b>Resultado</b>
                    <select id="resultado" class="selectpicker form-control" placeholder="Resultado" required>
                        <option>
                            Positivo
                        </option>
                        <option>
                            Negativo
                        </option>
                    </select>
                    <br>
                    <b>Tipo de prueba</b>
                    <select id="tipo" class="selectpicker form-control" placeholder="Tipo" required>
                        <option>
                            PCR
                        </option>
                        <option>
                            Test Rapido
                        </option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <a href="#" data-process="false" onclick="SendPrueba(this,event)"
                       class="btn btn-primary">Actualizar</a>
                </div>

            </div>
        </div>
    </div>

{% extends 'base.html.twig' %}



{% block content %}

<div class="x_panel">
    <div class="x_title">
        <h2>Estados de Camas</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">

        <div class="form-group row">
            <div class="col-md-4 col-sm-4">
                <a class="btn btn-success" href="{{ path('estado_cama_new') }}"><span class="fa fa-plus"></span>Adicionar</a>

            </div>
        </div>
        <div class="row">
            <div class="col-md-12 table-responsive">
    <table class="table">
        <thead>
            <tr>

                <th>Estado</th>
                <th>Descripcion</th>
                <th>Tipo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for estado_cama in estado_camas %}
            <tr>
                <td><a href="{{ path('estado_cama_show', {'id': estado_cama.id}) }}">{{ estado_cama.estado }}</a></td>
                <td>{{ estado_cama.descripcion }}</td>
                <td>{{ estado_cama.tipo }}</td>
                <td>

                    <a href="{{ path('estado_cama_edit', {'id': estado_cama.id}) }}"><span class="fa fa-edit"></span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>
        </div>

    </div>
</div>
{% endblock %}
